<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottom_nav_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button and Title Row -->
        <LinearLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:tint="@color/text_primary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help Center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Help Center Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frequently Asked Questions"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginBottom="16dp" />

            <!-- FAQ Item 1 -->
            <LinearLayout
                android:id="@+id/faq_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_blue_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How do I create a new trip?"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="To create a new trip, go to the Activity tab and tap the + button. Fill in the required details like trip name, dates, destination country, and you can add photos and journal entries later."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 2 -->
            <LinearLayout
                android:id="@+id/faq_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_blue_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How do I edit my trip details?"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="To edit a trip, open the trip from your Activity list, then tap the Edit button in the top right corner. You can modify trip details, add or remove photos, and update your journal entries."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 3 -->
            <LinearLayout
                android:id="@+id/faq_item_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_blue_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How do I add photos to my trip?"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Open your trip and tap on the Photos section. Select the '+' button to add new photos. You can choose images from your gallery or take new photos directly within the app."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 4 -->
            <LinearLayout
                android:id="@+id/faq_item_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_blue_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How do I manage my account settings?"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Go to your Profile tab and tap on the Settings icon. From there, you can update your profile information, change your password, manage notification preferences, and adjust privacy settings."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 5 -->
            <LinearLayout
                android:id="@+id/faq_item_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_blue_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="What is the Globe View on the Home screen?"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="The interactive 3D globe allows you to explore different countries. Tap on any country to see its name and the Start Planning button."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 6 -->
            <LinearLayout
                android:id="@+id/faq_item_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_blue_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How do I delete a trip?"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Open the trip you want to delete, then tap the delete icon in the top right corner, confirm deletion when prompted."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 7 -->
            <LinearLayout
                android:id="@+id/faq_item_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_blue_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How do I edit my account details?"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Go to the Profile tab, tap on your account information, update your email, username, or password as needed, and save your changes."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 8 -->
            <LinearLayout
                android:id="@+id/faq_item_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_blue_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How do I view my travel statistics?"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Go to the Profile tab, then tap on 'Travel Summary' to view your total trips, countries visited, journal entries, and favorite place."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 9 -->
            <LinearLayout
                android:id="@+id/faq_item_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_blue_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How do I search for specific trips or country?"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Go to the Explore page, use the search bar at the top, and type the destination country name to filter your trips."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 10 -->
            <LinearLayout
                android:id="@+id/faq_item_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_blue_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Can I organize my trips by date or destination?"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Yes, in the Explore page, you can sort your trips by date (newest/oldest) or alphabetically by destination country."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 11 -->
            <LinearLayout
                android:id="@+id/faq_item_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_blue_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Why can't I see my saved trips?"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Make sure you're logged into the correct account, check your internet connection to sync with the cloud, and pull down to refresh the Activity screen."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 12 -->
            <LinearLayout
                android:id="@+id/faq_item_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_blue_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Why is the globe not loading correctly?"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ensure you have a stable internet connection, and try closing and reopening the app."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 13 -->
            <LinearLayout
                android:id="@+id/faq_item_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_blue_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="What happens when I click on a country on the globe?"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="When you click on a country, a popup appears showing the country name and a 'Start Planning' button that takes you to the Add Trip page."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>